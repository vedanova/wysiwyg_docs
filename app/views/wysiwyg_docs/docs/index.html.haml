%section
  .span10
    - if current_user && current_user.admin?
      = form_for @doc do |form|
        - if @doc.present?
          = render :partial =>  "shared/editor", locals: {content: @doc.content, form: form}
        - else
          = render :partial =>  "shared/editor", locals: {content: "No content yet", form: form}

    - else
      = @doc.content.html_safe

  .span2
    %h4 Sidebar
    .row
      .span12
        = link_to "REST API reference", docs_path
        %ul.topics
          - @topics.each do |topic|
            %li.topic
              = topic.name


