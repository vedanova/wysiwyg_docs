%aside.span3
  .well.sidebar-nav-fixed
    %ul.nav.nav-list
      - WysiwygDocs::Topic.all.each do |topic|
        %li.nav-header.topic
          = topic.name
          - topic.articles.order("title ASC").each do |article|
            - klass = 'active' if current_page?(topic_article_path(topic, article))
            %li{class: klass }= link_to(article.title, topic_article_path(topic, article))
